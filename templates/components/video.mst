<div class="block block--video" {{#bg_color}}style="background-color: {{ bg_color }};"{{/bg_color}}>
  <video class="block--video__video" {{#still}}poster="{{ still }}"{{/still}} preload loop>
    <source src="{{ src }}" type="video/mp4">
  </video>
  {{#still}}
    <div class="block--video__mobile-still" style="background-image: url('{{ still }}');"></div>
  {{/still}}
</div>
