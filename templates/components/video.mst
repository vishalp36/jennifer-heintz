<div class="block block--video js-blocks" style="background-color: {{ bg_color }};"
  {{#light}}
    data-light="true"
  {{/light}}
  {{^light}}
    data-light="false"
  {{/light}}
>
  <video class="block--video__video" poster="{{ still }}" preload loop>
    <source src="{{ src }}" type="video/mp4">
  </video>
  <div class="block--video__mobile-still" style="background-image: url('{{ still }}')'"></div>
</div>
