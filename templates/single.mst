<section class="slider js-slider">
  {{#content}}
    <article class="slide js-slides">
      {{#image}}
        {{> image_block}}
      {{/image}}
      {{#split}}
        {{> split_block}}
      {{/split}}
      {{#text}}
        {{> text_block}}
      {{/text}}
      {{#video}}
        {{> video_block}}
      {{/video}}
    </article>
  {{/content}}
</section>